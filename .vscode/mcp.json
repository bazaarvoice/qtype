{
  "servers": {
    "shadcn": {
      "url": "https://www.shadcn.io/api/mcp"
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
    },
    "awesome-copilot": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "ghcr.io/microsoft/mcp-dotnet-samples/awesome-copilot:latest"
      ]
    },
    "qtype-mcp": {
      "type": "stdio",
      "command": "uv",
      "cwd": "${workspaceFolder}",
      "args": ["run", "qtype", "mcp", "--transport", "stdio"]
    }
